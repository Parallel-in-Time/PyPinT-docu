\defbeamertemplate*{footline}{Juelich}
{%
  \begin{beamercolorbox}[leftskip=7.5mm,ht=3.5mm,dp=0.0mm]{header}
	\usebeamercolor[fg]{date in head/foot}%
	%element 1
	\ifbeamertemplateempty{footer element1}{}{%
	\usebeamertemplate*{footer element1}%
	\hfill%
	}%
	%element 2
	\ifbeamertemplateempty{footer element2}{}{%
	\ifbeamertemplateempty{footer element1}{}{}%
	\usebeamertemplate*{footer element2}%
	\hskip3.5mm%
	\hfill%
	}%
	%element 3
	\ifbeamertemplateempty{footer element3}{}{%
	\ifbeamertemplateempty{footer element2}{}{\hskip-3.5mm}%
	\usebeamertemplate*{footer element3}%
	\hskip3.5mm%
	\hfill%
	}%
	% garantees that element4 is on the rightmost position even with all other elements left empty
	\ifbeamertemplateempty{footer element1}{%
		\ifbeamertemplateempty{footer element2}{%
			\ifbeamertemplateempty{footer element3}{%
		\hfill}{}%
		}{}%
	}{}%
	%element 4
	\ifbeamertemplateempty{footer element4}{}{%
	\ifbeamertemplateempty{footer element3}{}{\hskip-3.5mm}%
	\usebeamertemplate*{footer element4}%
	\hskip3.5mm%
	\hfill%
	}%
  \end{beamercolorbox}
  \begin{beamercolorbox}[leftskip=7.5mm,ht=3.5mm]{header}% empty line below footer
  \end{beamercolorbox}
}%
